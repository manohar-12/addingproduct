<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.simplilearn">
	<class name="Product" table="product">
		<id name="id" column="pid">
			<generator class="increment"></generator>
		</id>
		<property name="productname" type="string"></property>
		<property name="model" type="string"></property>
		<property name="price" type="string"></property>
		<property name="stockleft" type="int"></property>
	</class>

</hibernate-mapping>